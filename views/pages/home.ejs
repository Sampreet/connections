<!DOCTYPE html>
<html lang='en'>
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <header>
      <% include ../partials/header %>
    </header>

    <main>
      <div class='row'>
        <div class='col-sm-8 container'>
          <div class='well'>
            <h1><%= heading%></h1>
            <h4><%= sub_heading%></h4>
          </div>
          <div class='well'>
            <% for(var i = 0; i < apis.length; i++) { %>
              <a href='<%=apis[i].href%>' class='btn btn-default'><%= apis[i].button_text %></a>
            <% } %>
          </div>
        </div>
        <div class='col-sm-4'>
          <div class='well'>
            <h2>Services</h2>
            <% for(var i = 0; i < services.length; i++) { %>
              <p><span class='glyphicon glyphicon-forward'></span> <%= services[i].name %></p>
            <% } %>
          </div>
          <div class='well'>
            <h2>APIs</h2>
            <% for(var i = 0; i < apis.length; i++) { %>
              <p><span class='glyphicon glyphicon-forward'></span> <%= apis[i].name %></p>
            <% } %>
          </div>
        </div>
      </div>
    </main>

    <footer>
      <% include ../partials/footer %>
    </footer>
  </body>
</html>
